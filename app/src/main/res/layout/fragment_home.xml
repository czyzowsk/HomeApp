<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.damian.homeapp.HomeActivity$PlaceholderFragment"
    >

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/card_1"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/TealLight"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:src="@drawable/pic_thermometer" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView"
                android:paddingTop="16dp"
                android:text="Temperatura"
                android:textColor="@color/black_overlay"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/textTempInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wnętrze"
                android:textColor="@color/black_overlay"
                android:textSize="16sp"
                android:layout_below="@+id/textView"
                android:layout_toEndOf="@+id/imageView" />


            <com.example.damian.homeapp.dodatki.VerticalProgressBar
                android:id="@+id/temp_aktual"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="48dp"
                android:layout_height="150dp"
                android:paddingEnd="17dp"
                android:paddingStart="14dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                />

            <com.example.damian.homeapp.dodatki.VerticalSeekBar
                android:id="@+id/temp_seekBar"
                android:layout_width="48dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/temp_aktualna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/temp_seekBar"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                android:layout_toStartOf="@id/temp_seekBar"
                android:text="24°C"
                android:textColor="@android:color/white"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/temp_zadana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/temp_aktualna"
                android:layout_below="@id/temp_aktualna"
                android:layout_marginBottom="8dp"
                android:text="16°C"
                android:textColor="@color/colorAccent" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/card_2"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/DeepOrange"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bulb"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/pic_bulb" />

            <TextView
                android:id="@+id/light_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/bulb"
                android:paddingTop="16dp"
                android:text="Światło"
                android:textColor="@color/black_overlay"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/light_info_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wnętrze"
                android:textColor="@color/black_overlay"
                android:textSize="16sp"
                android:layout_below="@id/light_info"
                android:layout_toEndOf="@+id/bulb" />

            <SeekBar
                android:id="@+id/light_seekBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/light_text"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textColor="@android:color/white"
                android:textSize="45sp"
                android:layout_margin="16dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/card_3"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Green"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/some"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/some_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/some"
                android:paddingTop="16dp"
                android:text="Światło"
                android:textColor="@color/black_overlay"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/some_info_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wnętrze"
                android:textColor="@color/black_overlay"
                android:textSize="16sp"
                android:layout_below="@id/some_info"
                android:layout_toEndOf="@+id/some" />

            <SeekBar
                android:id="@+id/some_seekBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/some_text"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/some_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textColor="@android:color/white"
                android:textSize="45sp"
                android:layout_margin="16dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
